spring.application.name=Certifai

# Server Port Configuration
server.port=8080
server.servlet.context-path=/certifai

##Spring Datasource configuration
spring.datasource.url=${DATASOURCE_URL}
spring.datasource.username=${DATASOURCE_USERNAME}
spring.datasource.password=${DATASOURCE_PASSWORD}
spring.datasource.driver-class-name=org.postgresql.Driver

spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect

# ADMIN Config
admin.email=${ADMIN_EMAIL}
admin.password=${ADMIN_PASSWORD}

# Home by Role
security.redirect.roles.ADMIN=/admin/home
security.redirect.roles.ESTUDANTE=/estudante/home
security.redirect.roles.PROFESSOR=/professor/home

# Logout
app.security.logout.success-url=/certifai/login
app.security.logout.add-timestamp-param=true

# Swagger/OpenAPI Config
springdoc.swagger-ui.tagsSorter=alpha
springdoc.api-docs.path=/v3/api-docs
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.url=/v3/api-docs
springdoc.swagger-ui.operationsSorter=alpha
springdoc.show-actuator=true

# CORS Config
app.cors.allowed-origins=https://certifai-front-ruby.vercel.app
app.cors.allowed-methods=GET,POST,PUT,PATCH,DELETE,OPTIONS
app.cors.allowed-headers=Origin,Content-Type,Accept,Authorization,X-Requested-With
app.cors.exposed-headers=Authorization,Content-Disposition

jwt.secret=${JWT_SECRET}

logging.level.root=DEBUG
logging.level.org.springframework=DEBUG

#  Config SendGrid
sendgrid.api-key=${SENDGRID_API_KEY}
sendgrid.sender-email=certifai.suporte@gmail.com
app.base-url=https://certifai-backend.onrender.com/certifai

# Config de login com Google
spring.security.oauth2.client.registration.google.client-id=${CLIENT_ID}
spring.security.oauth2.client.registration.google.client-secret=${CLIENT_SECRET}
spring.security.oauth2.client.registration.google.scope=openid,profile,email
spring.security.oauth2.client.registration.google.redirect-uri={baseUrl}/login/oauth2/code/{registrationId}
spring.security.oauth2.client.registration.google.client-name=Google

spring.security.oauth2.client.provider.google.authorization-uri=https://accounts.google.com/o/oauth2/v2/auth
spring.security.oauth2.client.provider.google.token-uri=https://oauth2.googleapis.com/token
spring.security.oauth2.client.provider.google.user-info-uri=https://openidconnect.googleapis.com/v1/userinfo
spring.security.oauth2.client.provider.google.user-name-attribute=sub